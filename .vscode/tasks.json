{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project",
      "type": "shell",
      "command": "/usr/local/cuda/bin/nvcc", // Path to CUDA compiler (adjust if necessary)
      "args": [
        "-o", "/bin/my_program",             // Output executable name
        "/src/main.cpp",                  // Entry point
        "/src/*.cpp",    // Other C++ files
        "/src/cuda_kernel.cu",                 // CUDA kernel file
        "-std=c++11",                // Enable C++11 support
        "-I/usr/local/cuda/include", // Include CUDA headers
        "-L/usr/local/cuda/lib64",   // Link CUDA libraries
        "-lcudart"                   // Link CUDA runtime
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run Project",
      "type": "shell",
      "command": "./bin/my_program", // Run the compiled executable
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
